<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ShareNStudy - Profile</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="topbar"><div class="logo">ShareNStudy</div><div class="nav"><a href="/dashboard">Dashboard</a></div></div>

  <div class="container">
    <h2>Profile</h2>
    <div id="profileInfo">Loading...</div>
    <div style="margin-top:12px;">
      <a href="#" id="logoutBtn">Logout</a>
    </div>
  </div>

  <script src="/js/main.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      if (!localStorage.getItem("token")) return window.location.href = "/";
      const u = await apiGet("/api/auth/me");
      const el = document.getElementById("profileInfo");
      if (!u || !u._id) el.innerText = "Unable to load profile.";
      else el.innerHTML = `<div><strong>${u.name}</strong> (${u.email})</div><div>Phone: ${u.phone || '-'}</div><div>College: ${u.college || '-'}</div>`;
      document.getElementById("logoutBtn").onclick = () => { localStorage.clear(); window.location.href = "/"; };
    });
  </script>
</body>
</html>