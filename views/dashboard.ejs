<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ShareNStudy - Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" type="text/css" />
</head>
<body>
  <div class="topbar">
    <div class="logo">ShareNStudy</div>
    <div class="nav">
      <a href="/profile">Profile</a>
      <a href="#" id="logoutBtn">Logout</a>
    </div>
  </div>
  <div class="container">
    <h2>Dashboard</h2>
    <div class="grid cards">
      <a class="card" href="/donate">Donate / Sell</a>
      <a class="card" href="/buy">Buy</a>
      <a class="card" href="/myshelf">MyShelf</a>
      <a class="card" href="/inbox">Inbox</a>
      <a class="card" href="/outbox">Outbox</a>
      <a class="card" href="/report">Reports</a>
    </div>
  </div>

  <script src="/js/main.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      if (!localStorage.getItem("token")) window.location.href = "/";
      document.getElementById("logoutBtn").onclick = () => {
        localStorage.clear();
        window.location.href = "/";
      };
    });
  </script>
</body>
</html>