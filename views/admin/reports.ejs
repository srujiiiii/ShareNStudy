<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Reports</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="topbar"><div class="logo">ShareNStudy - Admin</div><div class="nav"><a href="/admin/admin-dashboard">Dashboard</a></div></div>
  <div class="container">
    <h2>Reports</h2>
    <div id="reportsList" class="list"></div>
  </div>
  <script src="/js/main.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const list = await apiGet("/api/reports");
      document.getElementById("reportsList").innerHTML = (list || []).map(r => `<div class="item">${r.reporter?.name || 'user'} — ${r.content} — ${r.status}</div>`).join("") || "No reports.";
    });
  </script>
</body>
</html>