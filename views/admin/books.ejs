<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Books</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="topbar"><div class="logo">ShareNStudy - Admin</div><div class="nav"><a href="/admin/admin-dashboard">Dashboard</a></div></div>
  <div class="container">
    <h2>All Books (Admin)</h2>
    <div id="booksList" class="list"></div>
  </div>
  <script src="/js/main.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const list = await apiGet("/api/admin/books");
      document.getElementById("booksList").innerHTML = (list || []).map(b => `<div class="item"><strong>${b.title}</strong> — ${b.owner?.name || 'unknown'} — ${b.status}</div>`).join("") || "No books.";
    });
  </script>
</body>
</html>